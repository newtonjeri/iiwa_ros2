  <!-- Joint Between the added base and the table-->
  <joint name="${prefix}joint_a8" type="fixed">
    <origin rpy="0 0 0" xyz="-0.3 0.50 0.10"/>
    <parent link="${prefix}iiwa_base"/>
    <child link="${prefix}table_plane"/>
