<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  	
  <!-- Contants -->
  <xacro:property name="PI" value="3.14159265359"/>
  <xacro:macro name="iiwa" params="parent prefix *origin">

  <material name="gray">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

<!-- Joint between the ${parent} and the added base -->
  <joint name="${prefix}iiwa_root_joint" type="fixed">
      <origin xyz = "0 0 0.86" rpy = "${PI} 0 ${-PI/2}" />
      <parent link="${parent}"/>
      <child link="${prefix}iiwa_base"/>
  </joint>

<!-- Added base -->
 <link name = "${prefix}iiwa_base">
      <visual>
        <origin xyz = "0 0 0" rpy = "0 0 0"/>
        <geometry>
          <mesh filename = "package://iiwa_description/meshes/flex_fellow_h800/flex_fellow_h800.dae"/>
        </geometry>
      </visual>

      <collision>
        <origin xyz = "0 0 0" rpy = "0 0 0"/>
        <geometry>
          <mesh filename = "package://iiwa_description/meshes/flex_fellow_h800/flex_fellow_h800.stl"/>
        </geometry>
      </collision>
 </link>

  <joint name="${prefix}iiwa_base_joint" type="fixed">
